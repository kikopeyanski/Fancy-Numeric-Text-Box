{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "HostApp": true,
    "electron": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "padded-blocks": [
      "error",
      {
        "blocks": "never",
        "classes": "never",
        "switches": "never"
      }
    ],
    "curly": "error",
    "keyword-spacing": [
      "error"
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-multiple-empty-lines": [
      "error"
    ],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-boolean-value": "error",
    // disallow use of <Component flag={true} /> in favor of <Component flag />
    "react/jsx-closing-bracket-location": [
      1,
      "tag-aligned"
    ],
    // disallow inconsistent formatting of closing JSX tags
    "react/jsx-curly-spacing": [
      1,
      {
        "when": "never"
      }
    ],
    // disallow spaces inside JSX curly brackets
    "react/jsx-closing-tag-location": 1,
    "react/jsx-equals-spacing": [
      1,
      "never"
    ],
    // disallow spaces around equal signs in JSX attributes
    //    "react/jsx-indent": [1, "tab"], // Validate JSX indentation
    //    "react/jsx-indent-props": [1, "tab"], // props indentation in JSX
    "react/jsx-key": 2,
    // disallow not assigning a key to an JSX element that requires a key
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": true
      }
    ],
    // disallow .bind() or Arrow Functions in JSX Props
    "react/jsx-no-comment-textnodes": 2,
    // prevent comments from being inserted as text nodes
    "react/jsx-no-duplicate-props": 2,
    // disallow duplicate properties in JSX
    "react/jsx-no-undef": 2,
    // Disallow undeclared variables in JSX
    "react/jsx-pascal-case": 2,
    // enforce PascalCase for user-defined JSX components
    "react/jsx-sort-props": [
      1,
      {
        "callbacksLast": true,
        "shorthandLast": true,
        "reservedFirst": true
      }
    ],
    "react/jsx-wrap-multilines": [
      2,
      {
        "declaration": true,
        "assignment": true,
        "return": true,
        "arrow": true
      }
    ],
    // disallow missing parentheses around multiline JSX
    "react/no-children-prop": 2,
    // disallow passing of children as props
    "react/no-deprecated": 2,
    // disallow usage of deprecated methods
    "react/no-did-mount-set-state": 2,
    // disallow usage of setState in componentDidMount
    "react/no-did-update-set-state": 2,
    // disallow usage of setState in componentDidUpdate
    "react/no-direct-mutation-state": 2,
    // disallow direct mutation of this.state
    "react/no-find-dom-node": 2,
    // disallow usage of findDOMNode
    "react/no-is-mounted": 2,
    // disallow usage of isMounted
    "react/no-multi-comp": [
      2,
      {
        "ignoreStateless": true
      }
    ],
    // disallow multiple component definition per file
    "react/no-redundant-should-component-update": 2,
    // disallow react/no-redundant-should-component-update
    "react/no-string-refs": 2,
    // disallow use of string references
    "react/no-unknown-property": 2,
    // disallow usage of unknown DOM property
    "react/no-unused-prop-types": 2,
    // disallow definitions of unused prop types
    "react/no-will-update-set-state": 2,
    // disallow react/no-will-update-set-state
    "react/prefer-es6-class": 2,
    // disallow es5 React.createClass syntax
    "react/prop-types": 2,
    // disallow missing props validation in a React component definition
    "react/react-in-jsx-scope": 2,
    // disallow missing React when using JSX
    "react/require-default-props": 2,
    // enforce a defaultProps definition for every prop that is not a required prop
    "react/require-render-return": 2,
    // disallow not returning a value in render function
    "react/style-prop-object": 2,
    // enforce style prop value being an object
    "react/self-closing-comp": 2,
    // disallow react/self-closing-comp
    "react/sort-comp": 2,
    // enforce component methods order
    "use-isnan": 2,
    // disallow comparisons with the value NaN
    "no-alert": 2,
    // disallow the use of alert, confirm, and prompt
    "no-caller": 2,
    // disallow use of arguments.caller or arguments.callee
    "no-dupe-keys": 2,
    // disallow duplicate keys when creating object literals
    "no-empty": 2,
    // disallow empty statements
    "no-eval": 2,
    // disallow use of eval()
    "no-extra-bind": 2,
    // disallow unnecessary function binding
    "no-extra-semi": 2,
    // disallow unnecessary semicolons
    "no-ex-assign": 2,
    // disallow assigning to the exception in a catch block
    "no-iterator": 2,
    // disallow usage of __iterator__ property
    "no-lone-blocks": 2,
    // disallow unnecessary nested blocks
    "no-loop-func": 2,
    // disallow creation of functions within loops
    // "no-multi-spaces": 2 // disallow use of multiple spaces,
    "no-proto": 2,
    // disallow usage of __proto__ property
    "no-redeclare": 2,
    // disallow declaring the same variable more then once,
    "no-self-compare": 2,
    // disallow comparisons where both sides are exactly the same (off by default)
    "no-unused-expressions": 2
    // disallow usage of expressions in statement position
  }
}